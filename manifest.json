{
    "manifest_version": 2,
    "name": "Samuraizer",
    "version": "1.0",
    "description": "Created Samuraizer for getting summary of articles withing seconds and going any third party websites. This extension are fully ads free.",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "Logo.svg"
    },
    "icons": {
        "16": "Logo.svg",
        "48": "Logo.svg",
        "128": "Logo.svg"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}